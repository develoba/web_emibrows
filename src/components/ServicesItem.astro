---
interface Props {
  id: string;
  title: string;
  contents: Content[];
  isBrown: boolean;
}

interface Content {
  subtitle: string;
  text: string[];
  prices: string[];
}

const { id, title, contents, isBrown } = Astro.props;
---

<article id={id} class="relative">
  <div class={isBrown ? "layout-flowers-brown" : "layout-flowers"}></div>
  <div class={`content ${isBrown ? "content-left" : ""}`}>
    <h1>{title}</h1>
    {
      contents.map((content) => (
        <div
          class={`pt-10 w-full flex flex-col ${isBrown ? "justify-end" : "justify-start"}`}
        >
          <h2>{content.subtitle}</h2>
          {content.text.map((contentItem) => (
            <p class="pb-5">{contentItem}</p>
          ))}
          <div class="flex flex-col gap-4">
            {content.prices.map((priceItem) => (
              <div class="self-center btn price-btn w-full md:w-auto md:min-w-[25em] self-center">
                {priceItem}
              </div>
            ))}
          </div>
        </div>
      ))
    }

    <a
      class="btn btn-purple apt-btn mt-5"
      href="https://www.treatwell.es/establecimiento/studio-emibrows/"
      target="_blank"
    >
      Pide tu cita
    </a>
  </div>
</article>

<style>
  h1 {
    color: var(--dark-purple);
    font-size: 3rem;
    margin-bottom: 1.8rem;
  }
  h2 {
    color: var(--purple);
    font-size: 1.5rem;
    font-family: TTRamillas, serif;
    margin-bottom: 1rem;
  }

  .apt-btn {
    max-width: 240px;
  }

  .btn {
    align-self: center;
    font-family: TTRamillas, serif;
    font-size: 1.2rem;
    font-weight: bold;
  }
</style>
