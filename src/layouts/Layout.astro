---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Estudio de belleza especializado en servicios de cejas, pestañas y depilación facial y corporal."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/icon.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --dark-purple: #645b8d;
    --purple: #a897c9;
    --grey: #9e9d9e;
    --brown: #ebebeb;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  @font-face {
    font-family: TTRamillas;
    src: url("../../public/fonts/TT Ramillas Trial Regular.ttf");
  }

  @font-face {
    font-family: TTRamillasItalic;
    src: url("../../public/fonts/TT Ramillas Trial Italic.ttf");
  }
  @font-face {
    font-family: TTRamillasBoldItalic;
    src: url("../../public/fonts/TT Ramillas Trial Bold Italic.ttf");
  }
  @font-face {
    font-family: Carlito;
    src: url("../../public/fonts/Carlito-Regular.ttf");
  }
  html {
    font-family: Carlito, sans-serif;
    background: #fff;
    scroll-behavior: smooth;
  }
  h1 {
    font-family: TTRamillas, serif;
  }

  .btn {
    display: block;
    border: 2px solid black;
    border-radius: 200px;
    padding: 0.8rem 3.3rem;
    font-size: 1.4rem;
    text-align: center;
  }

  .btn-purple {
    border-color: var(--grey);
    background-color: var(--purple);
    color: white;
  }

  .btn-white {
    color: white;
    border-color: white;
  }

  .content {
    padding: 2rem 1.25rem;
    z-index: 20;
    display: flex;
    flex-direction: column;
  }

  .content-left {
    align-items: end;
    text-align: right;
  }

  .layout-flowers {
    background-color: white;
    z-index: 10;
  }

  .layout-flowers-brown {
    background-color: var(--brown);
    z-index: 10;
  }

  .layout-flowers::before,
  .layout-flowers-brown::before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-image: url("/assets/flores.png");
    background-size: cover;
    background-position: 45% 40%;
    opacity: 0.1;
    z-index: -1;
  }

  .layout-flowers-brown::after {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: var(--brown);
    z-index: -2;
  }

  .layout-flowers-brown::before {
    background-color: var(--brown);
  }
</style>
